{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/api/**/*.ts",
    "src/commands/**/*.ts",
    "src/services/**/*.ts",
    "src/models/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
